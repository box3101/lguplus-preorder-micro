    quantity: 4,
    image: '../assets/img/prize-img04.png',
    thumbnail: '../assets/img/prize-thumb-img04.svg',
    alt: '상품4',
  },
  {
    id: 5,
    name: 'LG 시네빔 큐브',
    subName: 'LG',
    subName2: '시네빔 큐브',
    quantity: 5,
    image: '../assets/img/prize-img05.png',
    thumbnail: '../assets/img/prize-thumb-img05.svg',
    alt: '상품5',
  },
  {
    id: 6,
    name: '에르메스 자이언트 트라이앵글',
    subName: '에르메스',
