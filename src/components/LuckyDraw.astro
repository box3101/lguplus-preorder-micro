  {
    id: 1,
    name: '스타벅스 아이스 카페 아메리카노 T',
    subName: '스타벅스',
    subName2: '아메리카노 1잔',
    quantity: 1000,
    image: '../assets/img/prize-img01.png',
    thumbnail: '../assets/img/prize-thumb-img01.svg',
    alt: '태그호이어 시계',
  },
  {
    id: 2,
    name: '삼성 갤럭시북5 Pro 360 울트라7',
    subName: '삼성',
    subName2: '갤럭시북5 Pro',
    quantity: 2,
    image: '../assets/img/prize-img02.png',
    thumbnail: '../assets/img/prize-thumb-img02.svg',
    alt: '상품2',
  },
  {
    id: 3,
    name: 'LG 퓨리케어 하이드로타워 가습기',
    subName: 'LG ',
    subName2: '퓨리케어 가습기',
    quantity: 3,
    image: '../assets/img/prize-img03.png',
    thumbnail: '../assets/img/prize-thumb-img03.svg',
    alt: '상품3',
  },
  {
    id: 4,
    name: 'Steam Deck 1TB OLED',
    subName: 'Steam Deck',
