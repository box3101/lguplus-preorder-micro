                    />
                    <span>~</span>
                    <input
                      type="text"
                      id="a3"
                      class="com-input input-mid border-gray w120 datepicker-input"
                      placeholder="YYYY.MM.DD"
                    />
                    <img
                      class="calendar-icon datepicker-button"
                      src="../assets/img/date-icon.svg"
                      alt="calendar-icon"
                    />
